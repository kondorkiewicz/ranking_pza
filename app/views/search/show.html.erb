<div class='row'>
  <div class='col-sm-2'></div>
  <div class='col-sm-10 text-center'>
    <h2>Results <%= "(#{@users.count})" unless @users.empty? %></h2>
  </div>
</div>
<div class='row'>
  <div class="col-sm-2">
    <%= render 'search_form' %>
  </div>
  <div class="col-sm-10 text-center"><br />
    <% unless @users.empty? %>
      <%= render 'results_table', users: @users %>
    <% end %>
  </div>
</div>
